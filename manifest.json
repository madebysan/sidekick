{
  "manifest_version": 3,
  "name": "Sidekick",
  "version": "1.0",
  "description": "Chat with AI about any webpage. Grabs page content or YouTube transcripts as context.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "downloads"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["youtube.js", "chat.js", "tts.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["chat.css", "icons/icon32.png"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
